<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/white"
    android:padding="10dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:src="@mipmap/person_icon"
        />
    <LinearLayout
        android:id="@+id/data"
       android:layout_width="wrap_content"
       android:orientation="vertical"
        android:layout_toEndOf="@id/contact_profile_image"
       android:layout_margin="10dp"
      android:layout_centerVertical="true"
      android:layout_height="wrap_content">
      <TextView
         android:id="@+id/contact_profile_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:textStyle="bold"
        android:text="Name"
        />
    <TextView
        android:id="@+id/contact_profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/happy_mood"
        />
</LinearLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/data"
        android:background="@color/hash"
        />


</RelativeLayout>